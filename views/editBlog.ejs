<html>
    <head><title>Edit Blog</title>
    <%- include('./partials/style.ejs') %>
    </head>

    <body>
        <%- include('./partials/topbar.ejs') %>
        <div class="wrapper">
            <h2>Edit blog</h2>
        <form method="POST" action="/updateblog" class="blog-form">
            <input type="hidden" name="blogId" value="<%= blogData._id %>"> <!-- Send blog ID -->
            <input type="text" value="<%= blogData.title %>" name="title" placeholder="Enter Blog's title " />
            <br />
            <textarea name="body" placeholder="Write your blog here ..." rows="20"><%= blogData.body %></textarea>
            <br />
            <input class="add-button" type="submit" value="Update" />
        </form>
    </div>
    </body>
</html>